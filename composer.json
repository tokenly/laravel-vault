{
    "name": "tokenly/laravel-vault",
    "type": "library",
    "description": "A Laravel interface for Hashicorp Vault",
    "keywords": [
        "laravel", "Vault"
    ],
    "homepage": "https://github.com/tokenly/laravel-vault",
    "license": "MIT",
    "authors": [
        {
            "name": "Devon Weller",
            "email": "devon@tokenly.com",
            "homepage": "https://tokenly.com"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0",
        "ext-json": "*",
        "illuminate/support": "~5.2",
        "jippi/vault-php-sdk": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0||~6.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Tokenly\\Vault\\": "src"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tokenly\\Vault\\Providers\\LaravelServiceProvider"
            ]
        },
        "lumen": {
            "providers": [
                "Tokenly\\Vault\\Providers\\LumenServiceProvider"
            ]
        }
    }
}
